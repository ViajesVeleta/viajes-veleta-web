---
// Enable server-side rendering for this catch-all route
export const prerender = false;

// Catch-all route for missing English pages
// This handles fallback to Spanish version if it exists, otherwise shows 404

const pathname = Astro.url.pathname;
const spanishPath = pathname.replace("/en/", "/");

// Try to check if Spanish version exists by making a fetch
let spanishExists = false;
try {
    // In dev mode, we can try to fetch the Spanish path
    const response = await fetch(new URL(spanishPath, Astro.url.origin));
    spanishExists = response.ok;
} catch (e) {
    spanishExists = false;
}

// If Spanish version exists, redirect with fallback parameter
if (spanishExists) {
    return Astro.redirect(`${spanishPath}?lang=en&fallback=true`, 307);
}

// Otherwise, show a 404 page
---

