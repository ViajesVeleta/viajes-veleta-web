---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import PageHero from "../../components/PageHero.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import {
    getLangFromUrl,
    useTranslatedPath,
    useTranslations,
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const translatedPaths = {
    es: "/contacto",
    en: "/en/contacto",
};
---

<!doctype html>
<html lang={lang}>
    <head>
        <BaseHead
            title={`${t("nav.contact")} - ${SITE_TITLE}`}
            description={SITE_DESCRIPTION}
            translatedPaths={translatedPaths}
        />
        <style>
            main {
                width: 100%;
                max-width: 1200px;
                margin: 0 auto;
                padding: 3em 1em;
            }
            .contact-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
                gap: 3rem;
            }
            .contact-info h2 {
                font-size: 2.5rem;
                font-weight: 300;
                color: var(--black);
                margin-bottom: 2rem;
            }
            .info-list {
                display: flex;
                flex-direction: column;
                gap: 1.5rem;
                align-items: center;
            }
            .info-item {
                display: grid;
                grid-template-columns: 40px 1fr;
                gap: 1rem;
                align-items: center;
                font-size: 1.1rem;
                text-align: left;
                color: var(--gray-dark);
                width: 100%;
                max-width: 400px;
            }
            .info-item svg {
                color: #b0b0b0;
                justify-self: center;
            }
            .info-item a {
                text-decoration: none;
                color: inherit;
                transition: color 0.2s ease;
            }
            .info-item a:hover {
                color: var(--accent);
            }
            @media (max-width: 768px) {
                .contact-info h2 {
                    font-size: 2.5rem;
                }
            }
        </style>
    </head>
    <body>
        <Header isOverlay={true} translatedPaths={translatedPaths} />
        <PageHero title={t("nav.contact")} heroImage="contacto" />
        <main>
            <div class="contact-container">
                <div class="contact-info">
                    <h2>Contact Information</h2>

                    <div class="info-list">
                        <div class="info-item">
                            <i class="fa-solid fa-phone"></i>
                            <a href="tel:958669016">958 66 90 16</a>
                        </div>

                        <div class="info-item">
                            <i class="fa-brands fa-whatsapp"></i>
                            <a href="tel:653880210">653 880 210</a>
                        </div>

                        <div class="info-item">
                            <i class="fa-solid fa-envelope"></i>
                            <a href="mailto:guadix@viajesveleta.es"
                                >guadix@viajesveleta.es</a
                            >
                        </div>

                        <div class="info-item">
                            <i class="fa-solid fa-building"></i>
                            <span>Poetisa Hafsa, nÂº 3, Guadix (Granada)</span>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>
