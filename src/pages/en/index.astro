---
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import HomeSlider from "../../components/HomeSlider.astro";
import GroupTripsGrid from "../../components/GroupTripsGrid.astro";
import ParallaxSection from "../../components/ParallaxSection.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import { getLangFromUrl } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translatedPaths = {
    es: "/",
    en: "/en",
};
---

<!doctype html>
<html lang={lang} dir="ltr">
    <head>
        <BaseHead
            title={SITE_TITLE}
            description={SITE_DESCRIPTION}
            translatedPaths={translatedPaths}
        />
    </head>
    <body>
        <Header isOverlay={true} translatedPaths={translatedPaths} />

        <HomeSlider />

        <GroupTripsGrid />

        <ParallaxSection
            stats={[
                { value: "30", label: "Years of experience" },
                { value: "150.000", label: "Bookings made" },
                { value: "25.000", label: "Clients" },
            ]}
        >
            <span slot="title">
                AT <strong>VIAJES VELETA</strong> WE KNOW WHAT YOU NEED
            </span>
        </ParallaxSection>

        <main
            style="padding: 2rem; max-width: 800px; margin: 0 auto; text-align: center;"
        >
            <h1>üåç Discover the World with Viajes Veleta</h1>
            <p>
                Welcome to our English portal. We are working hard to bring you
                the best travel experiences in your language.
            </p>
            <p>
                Feel free to explore our blog, check our special offers, and
                join our group trips.
            </p>
        </main>
        <Footer />
    </body>
</html>
