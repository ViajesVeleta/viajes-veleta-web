---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead
            title={`Contacto - ${SITE_TITLE}`}
            description={SITE_DESCRIPTION}
        />
        <style>
            main {
                width: 100%;
                max-width: 1200px;
                margin: 0 auto;
                padding: 3em 1em;
            }
            .contact-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
                gap: 3rem;
            }
            .contact-info h1 {
                font-size: 2.5rem;
                font-weight: 300;
                color: var(--black);
                margin-bottom: 2rem;
            }
            .info-list {
                display: flex;
                flex-direction: column;
                gap: 1.5rem;
                align-items: center;
            }
            .info-item {
                display: grid;
                grid-template-columns: 40px 1fr;
                gap: 1rem;
                align-items: center;
                font-size: 1.1rem;
                text-align: left;
                color: var(--gray-dark);
                width: 100%;
                max-width: 400px; /* Keep it constrained for readability */
            }
            .info-item svg {
                color: #b0b0b0; /* Light gray icon color as seen in provided image style */
                justify-self: center;
            }
            .info-item a {
                text-decoration: none;
                color: inherit;
                transition: color 0.2s ease;
            }
            .info-item a:hover {
                color: var(--accent);
            }
            label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: bold;
                color: var(--black);
            }
            input,
            textarea {
                width: 100%;
                padding: 0.8rem;
                border-radius: 0.5rem;
                border: 1px solid var(--gray-light);
                background: rgba(255, 255, 255, 0.8);
                font-size: 1rem;
                transition: all 0.3s ease;
            }
            input:focus,
            textarea:focus {
                outline: none;
                border-color: var(--accent);
                box-shadow: 0 0 0 3px rgba(var(--accent), 0.2);
            }
            button {
                width: 100%;
                padding: 1rem;
                background: var(--accent);
                color: white;
                border: none;
                border-radius: 0.5rem;
                font-size: 1.1rem;
                font-weight: bold;
                cursor: pointer;
                transition:
                    transform 0.2s ease,
                    box-shadow 0.2s ease;
            }
            button:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(var(--accent), 0.4);
            }
            @media (max-width: 768px) {
                .contact-container {
                    grid-template-columns: 1fr;
                    gap: 2rem;
                }
                .contact-info h1 {
                    font-size: 2.5rem;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="contact-container">
                <div class="contact-info">
                    <h1>Información de contacto</h1>

                    <div class="info-list">
                        <div class="info-item">
                            <i class="fa-solid fa-phone"></i>
                            <a href="tel:958669016">958 66 90 16</a>
                        </div>

                        <div class="info-item">
                            <i class="fa-brands fa-whatsapp"></i>
                            <a href="tel:653880210">653 880 210</a>
                        </div>

                        <div class="info-item">
                            <i class="fa-solid fa-envelope"></i>
                            <a href="mailto:guadix@viajesveleta.es"
                                >guadix@viajesveleta.es</a
                            >
                        </div>

                        <div class="info-item">
                            <i class="fa-solid fa-building"></i>
                            <span>Poetisa Hafsa, nº 3, Guadix (Granada)</span>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>
