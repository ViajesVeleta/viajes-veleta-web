---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import {
	getLangFromUrl,
	useTranslations,
	useTranslatedPath,
} from "../i18n/utils";
import { getDynamicImage } from "../utils/images";

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	tags,
	translatedPaths,
} = Astro.props;

const resolvedHeroImage =
	typeof heroImage === "string" ? getDynamicImage(heroImage) : heroImage;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<html lang={lang} dir="ltr">
	<head>
		<BaseHead
			title={title}
			description={description}
			translatedPaths={translatedPaths}
			image={resolvedHeroImage}
		/>
		<style>
			main {
				width: 100%;
				max-width: none;
				margin: 0;
				padding: 0;
			}
			.hero-image {
				width: 100%;
				height: 60vh;
				position: relative;
				margin-bottom: 2rem;
			}
			.hero-image::after {
				content: "";
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				height: 15rem;
				background: linear-gradient(
					to top,
					var(--bg-primary),
					transparent
				);
				z-index: 1;
			}
			.hero-image img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: 0;
				box-shadow: none;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: var(--on-surface);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				font-size: 3rem;
				font-weight: 800;
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--on-surface-variant);
			}
			.last-updated-on {
				font-style: italic;
			}
			.tags {
				display: flex;
				gap: 0.5rem;
				justify-content: center;
				margin-bottom: 2rem;
			}
			.tag {
				background: var(--surface-variant);
				color: var(--on-surface-variant);
				padding: 0.25rem 0.75rem;
				border-radius: 50px;
				font-size: 0.85rem;
				text-decoration: none;
				transition: all 0.2s ease;
			}
			.tag:hover {
				background: var(--primary);
				color: var(--on-primary);
			}
		</style>
	</head>

	<body>
		<Header isOverlay={true} translatedPaths={translatedPaths} />
		<main>
			<article>
				<div class="hero-image">
					{
						resolvedHeroImage && (
							<Image
								width={1920}
								height={1080}
								src={resolvedHeroImage}
								alt=""
								loading="eager"
								fetchpriority="high"
							/>
						)
					}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} locale={lang} />
							{
								updatedDate && (
									<div class="last-updated-on">
										{t("blog.lastUpdated")}{" "}
										<FormattedDate
											date={updatedDate}
											locale={lang}
										/>
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						{
							tags && tags.length > 0 && (
								<div class="tags">
									{tags.map((tag: string) => (
										<a
											href={translatePath(
												`/tags/${tag}/`,
											)}
											class="tag"
										>
											#{tag}
										</a>
									))}
								</div>
							)
						}
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
