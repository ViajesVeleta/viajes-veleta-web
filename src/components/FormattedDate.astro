---
import { getLangFromUrl } from "../i18n/utils";

interface Props {
	date: Date;
	locale?: string;
}

const currentLang = getLangFromUrl(Astro.url);
const { date, locale = currentLang } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: "numeric",
			month: "long",
			day: "numeric",
		})
	}
</time>
