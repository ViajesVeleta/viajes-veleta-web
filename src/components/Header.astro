	</div>
	<nav id="main-nav">
		<div class="header-content">
			<h2>
				<a href="/">
					<Image
						src={logo}
						alt="Logo"
						width={48}
						height={48}
						class="logo"
						style="height: 48px; width: auto;"
						loading="eager"
					/>
					{SITE_TITLE}
				</a>
			</h2>
			<div class="internal-links" id="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/viajes-en-grupo">Viajes en grupo</HeaderLink>
				<HeaderLink href="/ofertas">Ofertas</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/contacto">Contacto</HeaderLink>
			</div>

			<div class="nav-actions">
				<Search id="search" />
				<div id="theme-toggle">
					<ThemeToggle />
				</div>
			</div>

			<!-- Mobile Menu Button -->
			<button
				class="mobile-menu-button"
				id="mobile-menu-button"
				aria-label="Toggle menu"
			>
				<span></span>
				<span></span>
			</button>
		</div>
	</nav>

	<!-- Mobile Menu Drawer -->
	<div class="mobile-menu-drawer" id="mobile-menu-drawer">
		<div class="mobile-menu-content">
			<button
				class="close-button"
				id="close-menu-button"
				aria-label="Close menu"
			>
				<svg
					width="24"
					height="24"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
				>
					<line x1="18" y1="6" x2="6" y2="18"></line>
					<line x1="6" y1="6" x2="18" y2="18"></line>
				</svg>
			</button>
			<nav class="mobile-nav">
				<a href="/" class="mobile-nav-link">Home</a>
				<a href="/viajes-en-grupo" class="mobile-nav-link"
					>Viajes en grupo</a
				>
				<a href="/ofertas" class="mobile-nav-link">Ofertas</a>
				<a href="/blog" class="mobile-nav-link">Blog</a>
				<a href="/contacto" class="mobile-nav-link">Contacto</a>
				<div class="mobile-theme-toggle">
					<ThemeToggle />
				</div>
			</nav>
		</div>
	</div>

	<script>
		// Scroll behavior for double header
		const header = document.getElementById("main-header");

		function handleScroll() {
			if (window.scrollY > 20) {
				header?.classList.add("scrolled");
			} else {
				header?.classList.remove("scrolled");
			}
		}

		window.addEventListener("scroll", handleScroll);

		// Mobile menu toggle functionality
		function initMobileMenu() {
			const menuButton = document.getElementById("mobile-menu-button");
			const closeButton = document.getElementById("close-menu-button");
			const drawer = document.getElementById("mobile-menu-drawer");
			const mobileLinks = document.querySelectorAll(".mobile-nav-link");

			function openMenu() {
				drawer?.classList.add("open");
				document.body.style.overflow = "hidden";
			}

			function closeMenu() {
				drawer?.classList.remove("open");
				document.body.style.overflow = "";
			}

			menuButton?.addEventListener("click", openMenu);
			closeButton?.addEventListener("click", closeMenu);

			// Close menu when clicking on a link
			mobileLinks.forEach((link) => {
				link.addEventListener("click", closeMenu);
			});

			// Close menu when clicking outside
			drawer?.addEventListener("click", (e) => {
				if (e.target === drawer) {
					closeMenu();
				}
			});

			// Note: Theme toggle functionality is handled by the ThemeToggle component itself
			// No need for additional synchronization logic here
		}

		// Initialize on load

		initMobileMenu();

		// Re-check after navigation (for Astro view transitions)
		document.addEventListener("astro:page-load", () => {
			initMobileMenu();
			window.addEventListener("scroll", handleScroll);
		});
	</script>

	<style>
		header {
			margin: 0;
			position: sticky;
			top: 0;
			z-index: 100;
			width: 100%;
			transition: top 0.3s ease;
			box-shadow: var(--header-shadow);
		}

		header.scrolled {
			top: -40px; /* Hide top bar (height 40px) */
		}

		.header-content {
			max-width: 1200px;
			margin: 0 auto;
			display: flex;
			justify-content: space-between;
			align-items: center;
			height: 100%;
			padding: 0 1rem;
			width: 100%;
		}

		.top-bar {
			height: 40px;
			background: color-mix(in srgb, var(--bg-nav), black 40%);
			backdrop-filter: blur(8px);
			font-size: 0.85rem;
			color: var(--on-bg-nav);
			border-bottom: 1px solid rgba(255, 255, 255, 0.05);
		}

		.contact-info {
			display: flex;
			gap: 1.5rem;
		}

		.contact-info a {
			color: var(--on-bg-nav);
			text-decoration: none;
			display: flex;
			align-items: center;
			gap: 0.5rem;
			opacity: 0.9;
			transition: opacity 0.2s;
		}

		.contact-info a:hover {
			opacity: 1;
		}

		nav {
			height: 70px;
			background: color-mix(in srgb, var(--bg-nav), transparent 15%);
			backdrop-filter: blur(10px);
		}

		.nav-actions {
			display: flex;
			align-items: center;
			gap: 0.5rem;
		}

		h2 {
			margin: 0;
			font-size: 1em;
			font-weight: normal;
			flex-shrink: 0;
		}

		h2 a,
		h2 a.active {
			text-decoration: none;
			color: var(--on-bg-nav);
			display: flex;
			align-items: center;
			gap: 1.5rem;
		}

		nav a {
			padding: 0.5em 0.5em;
			color: var(--on-bg-nav);
			text-decoration: none;
			opacity: 0.9;
			transition: opacity 0.2s ease;
			border-radius: 0.5em;
		}

		nav a:hover {
			opacity: 1;
			background: rgba(255, 255, 255, 0.1);
		}

		nav a.active {
			text-decoration: underline;
			text-decoration-thickness: 3px;
			text-decoration-color: var(--secondary);
			text-underline-offset: 10px;
			opacity: 1;
			font-weight: bold;
		}

		.internal-links {
			display: flex;
			gap: 0.5rem;
		}

		.social-links {
			display: flex;
			gap: 0.5rem;
		}

		.social-links a {
			display: flex;
			color: var(--on-bg-nav);
			padding: 0;
		}

		.social-links svg {
			width: 20px;
			height: 20px;
		}

		/* Mobile Menu Button - Apple style (two horizontal lines) */
		.mobile-menu-button {
			display: none;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			width: 44px;
			height: 44px;
			background: none;
			border: none;
			cursor: pointer;
			padding: 0;
			gap: 6px;
		}

		.mobile-menu-button span {
			display: block;
			width: 18px;
			height: 2px;
			background-color: var(--on-bg-nav);
			transition: all 0.3s ease;
			border-radius: 2px;
		}

		.mobile-menu-button:hover span {
			background-color: var(--on-bg-nav);
			opacity: 0.7;
		}

		/* Mobile Menu Drawer */
		.mobile-menu-drawer {
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: rgba(0, 0, 0, 0.5);
			backdrop-filter: blur(10px);
			z-index: 999;
			opacity: 0;
			visibility: hidden;
			transition:
				opacity 0.3s ease,
				visibility 0.3s ease;
		}

		.mobile-menu-drawer.open {
			opacity: 1;
			visibility: visible;
		}

		.mobile-menu-content {
			background: var(--bg-nav);
			width: 100%;
			max-width: 100%;
			padding: 2rem 1.5rem;
			transform: translateY(-100%);
			transition: transform 0.3s ease;
			position: relative;
		}

		.mobile-menu-drawer.open .mobile-menu-content {
			transform: translateY(0);
		}

		.close-button {
			position: absolute;
			top: 1rem;
			right: 1rem;
			background: none;
			border: none;
			cursor: pointer;
			padding: 0.5rem;
			color: var(--on-bg-nav);
			display: flex;
			align-items: center;
			justify-content: center;
			width: 44px;
			height: 44px;
			border-radius: 50%;
			transition: background 0.2s ease;
		}

		.close-button:hover {
			background: rgba(255, 255, 255, 0.1);
		}

		.mobile-nav {
			display: flex;
			flex-direction: column;
			gap: 0;
			margin-top: 3rem;
		}

		.mobile-nav-link {
			color: var(--on-bg-nav);
			text-decoration: none;
			font-size: 1.5rem;
			padding: 1rem 0;
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
			transition: opacity 0.2s ease;
			opacity: 0.9;
		}

		.mobile-nav-link:hover {
			opacity: 1;
		}

		.mobile-nav-link:last-child {
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		}

		.mobile-theme-toggle {
			padding: 1.5rem 0 1rem;
			display: flex;
			justify-content: center;
		}

		/* Responsive breakpoint - switch to mobile menu */
		@media (max-width: 1100px) {
			/* Hide desktop menu items */
			.internal-links,
			.nav-actions {
				display: none !important;
			}

			.top-bar {
				display: none !important; /* Hide top bar on mobile */
			}

			/* Show mobile menu button */
			.mobile-menu-button {
				display: flex !important;
			}

			/* Reset hiding of nav on scroll for mobile */
			header.scrolled {
				top: 0;
			}
		}
	</style>
</header>
