---
import { Image } from "astro:assets";
import heroBg from "../assets/blog-hero.webp";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="page-hero">
    <div class="hero-image-container">
        <Image
            src={heroBg}
            alt=""
            class="hero-image"
            loading="eager"
            fetchpriority="high"
        />
        <div class="overlay"></div>
    </div>
    <div class="hero-content">
        <h1>{title}</h1>
        <nav class="breadcrumb" aria-label="Breadcrumb">
            <ol>
                <li><a href="/">Inicio</a></li>
                <li class="separator">&gt;</li>
                <li class="current" aria-current="page">{title}</li>
            </ol>
        </nav>
    </div>
</div>

<style>
    .page-hero {
        position: relative;
        width: 100%;
        height: 50vh; /* Takes roughly half screen or whatever looks good, user image looks like 400-500px */
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        overflow: hidden;
    }

    .hero-image-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4); /* Darkens image */
    }

    .hero-content {
        text-align: center;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding-top: 60px; /* Offset for header roughly */
    }

    h1 {
        font-size: 3rem;
        font-weight: 300;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        color: white;
    }

    .breadcrumb ol {
        display: flex;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
        margin: 0;
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .breadcrumb a {
        color: white;
        text-decoration: none;
        transition: opacity 0.2s;
    }

    .breadcrumb a:hover {
        opacity: 0.8;
        text-decoration: underline;
    }

    .breadcrumb .separator {
        margin: 0 0.2rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .breadcrumb .current {
        color: var(
            --primary
        ); /* Use a brand color if available, or just white/different shade */
        color: #dfdfdf;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }
</style>
