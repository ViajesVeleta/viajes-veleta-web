<div id="search"></div>

<script>
    import { PagefindUI } from "@pagefind/default-ui";
    import "@pagefind/default-ui/css/ui.css";

    window.addEventListener("DOMContentLoaded", () => {
        new PagefindUI({
            element: "#search",
            showSubResults: true,
            showImages: false,
        });
    });
</script>

<style is:global>
    /* Styling to make it look nice in the header */
    #search {
        --pagefind-ui-scale: 0.8;
        --pagefind-ui-primary: var(--accent);
        --pagefind-ui-text: var(--gray-dark);
        --pagefind-ui-background: #ffffff;
        --pagefind-ui-border: var(--gray-light);
        --pagefind-ui-tag: var(--gray-light);
        --pagefind-ui-border-width: 1px;
        --pagefind-ui-border-radius: 8px;
        --pagefind-ui-image-border-radius: 8px;
        --pagefind-ui-image-box-ratio: 3 / 2;
        --pagefind-ui-font: "Lato", sans-serif;
    }

    #search .pagefind-ui__search-input {
        font-weight: normal;
    }

    #search .pagefind-ui__drawer {
        position: absolute;
        left: 0;
        right: 0;
        margin-top: 10px;
        z-index: 9999;
        background: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        display: none; /* Hidden by default until search has value */
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Only show drawer when it has content */
    #search
        .pagefind-ui__search-input:not(:placeholder-shown)
        ~ .pagefind-ui__drawer {
        display: block;
    }
</style>
